#!/bin/bash -e

case "$1" in
  -v|--version)
    version="$2"
esac

source $OPENSHIFT_CARTRIDGE_SDK_BASH
source ${OPENSHIFT_CBP_DIR}/bin/util

echo "$version" > "$OPENSHIFT_CBP_DIR/env/OPENSHIFT_CBP_VERSION"

sed -i "s/{APP_NAME}/${OPENSHIFT_APP_NAME}/g" ${OPENSHIFT_CBP_DIR}/template/pom.xml

# Create and install the initial template WAR
pushd $OPENSHIFT_CBP_DIR/template/src/main/webapp 1>/dev/null
  jar cvf $OPENSHIFT_CBP_DIR/template/webapps/ROOT.war ./*
popd 1>/dev/null

# Set up the default path and JAVA_HOME
export JAVA_HOME=$OPENSHIFT_CBP_JDK7
reinstall_path
